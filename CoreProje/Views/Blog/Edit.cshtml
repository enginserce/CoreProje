@model EntityLayer.Concrete.Blog

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Blog Düzenleme</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x=>x.BlogID, new {@class="form-control", @readonly ="readonly"})
                </div>
                <div class="form-group">
                    <label>Blog Başlığı</label>
                    @Html.TextBoxFor(x=>x.BlogTitle, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Blog Görseli</label>
                    @Html.TextBoxFor(x=>x.BlogImage, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Blog Küçük Görseli</label>
                    @Html.TextBoxFor(x=>x.BlogThumbnailImage, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Kategori</label>
                    @Html.DropDownListFor(x=> x.CategoryID,(List<SelectListItem>)ViewBag.cv, new { @class = "form-control"})
                </div>
                 <div class="form-group">
                    <label>Kategori</label>
                    @Html.TextBoxFor(x=>x.BlogStatus, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">İçerik</label>
                    @Html.TextAreaFor(x=>x.BlogContent, new {@class="form-control", @rows = 10})
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Gönder</button>
            </form>
        </div>
    </div>
</div>