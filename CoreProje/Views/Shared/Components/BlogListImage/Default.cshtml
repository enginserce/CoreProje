@model List<Blog>

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Hakkında</h4>
                <div class="d-flex">
                    <div class="d-flex align-items-center mr-4 text-muted font-weight-light">
                        <span>Paylaştığınız son blogların resimleri</span>
                    </div>
                </div>
                <div class="row mt-3">
                    @foreach (var item in Model.Take(4))
                    {
                    <div class="col-6 pr-1">
                        <img src="@item.BlogImage" class="mb-2 mw-100 w-100 rounded" alt="image">
                    </div>
                    }
                </div>
                
                @await Component.InvokeAsync("WriterAboutOnDashboard")
            </div>
        </div>
    </div>
</div>
