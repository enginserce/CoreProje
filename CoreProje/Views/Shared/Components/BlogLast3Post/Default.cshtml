@model List<Blog>


<div class="tech-btm">
    <h3>Son Gönderiler</h3>
    <div class="blog-grids row mb-3">
        @foreach (var item in Model.Take(3))
        {
        <div class="col-md-5 blog-grid-left">
                <a href="/Blog/Details/@item.BlogID">
                <img src="@item.BlogImage" class="card-img-top img-fluid" alt="">
            </a>
        </div>
        <div class="col-md-7 blog-grid-right">

            <h5>
                <a href="/Blog/Details/@item.BlogID">@item.BlogContent.Substring(0,50)...</a>
            </h5>
            <div class="sub-meta">
                <span>
                    <i class="far fa-clock"></i> @item.BlogCreateDate.ToString("dd MMMM yy")
                </span>
            </div>
        </div>
        }
    </div>
</div>