@model UserUpdateModelView

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Profil Ayarları</h5>
        </div>
        <div class="ibox-content">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group  row">
                    <label class="col-sm-2 col-form-label">Ad Soyad</label>
                    <div class="col-sm-10"><input type="text" class="form-control" asp-for="NameSurname"></div>
                    <span asp-validation-for="NameSurname" class="alert-danger"></span>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Mail Adresi</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Mail" readonly="@(true)">
                        <span asp-validation-for="Mail" class="alert-danger"></span>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Kullanıcı Adı</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="UserName">
                        <span asp-validation-for="UserName" class="alert-danger"></span>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Yeni Şifre</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" asp-for="Password" placeholder="********">
                        <span asp-validation-for="Password" class="alert-danger"></span>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Şifre Tekrar</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="********">
                        <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Resim Yükle</label>
                    <div class="col-sm-10">
                        <input type="file" name="imageUrl" asp-for="imageUrl" class="file-upload-default">
                    </div>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group row">
                    <div class="col-sm-4 col-sm-offset-2">
                        <button class="btn btn-primary btn-sm" type="submit">Kaydet!</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts
    {
    <scripts>

    </scripts>
}


