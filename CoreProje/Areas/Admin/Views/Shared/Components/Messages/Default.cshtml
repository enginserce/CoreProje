@model List<Message2>

<ul class="nav navbar-top-links navbar-right">
    <li class="dropdown">
        <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#">
            <i class="fa fa-envelope"></i>  <span class="label label-warning">@ViewBag.message</span>
        </a>
        <ul class="dropdown-menu dropdown-messages">
            @foreach (var item in Model)
            {
                <li>
                    <div class="dropdown-messages-box" >
                        <div class="media-body">
                            <small class="float-right">@item.MessageDate.Zaman()</small>
                            <strong>@item.SenderUser.WriterName</strong> mesaj gönderdi.<br>
                            <small class="text-muted">@item.MessageDate.ToLongDateString()</small>
                        </div>
                    </div>
                </li>
            }
            <li class="dropdown-divider"></li>
            <li>
                <div class="text-center link-block">
                    <a href="/Admin/Message/Inbox" class="dropdown-item">
                        <i class="fa fa-envelope"></i> <strong>Gelen Kutusu</strong>
                    </a>
                </div>
            </li>
        </ul>
    </li>
    <li>
        <a href="/Login/LogOut">
            <i class="fa fa-sign-out"></i> Çıkış Yap
        </a>
    </li>
</ul>