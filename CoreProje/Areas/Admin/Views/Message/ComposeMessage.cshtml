@model List<Message2>
@{
    ViewData["Title"] = "ComposeMessage";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="wrapper wrapper-content">
    <div class="row">
        <partial name="LeftBar" />
        <div class="col-lg-9 animated fadeInRight">
            <div class="mail-box-header">
                <h2>
                    Yeni Mesaj Oluştur
                </h2>
            </div>
            <div class="mail-box">
                <div class="mail-body">

                    <form method="post">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Alıcı:</label>

                            <div class="col-sm-10">
                                <div class="col-sm-10"><input type="text" class="form-control" name="Id"></div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Konu:</label>

                            <div class="col-sm-10"><input type="text" class="form-control" name="Subject"></div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Mesaj:</label>


                            <div class="col-sm-10"><textarea class="form-control" value="" rows="4" colscols="10" name="MessageDetails"></textarea></div>
                        </div>
                        <br />
                        <button class="btn btn-sm btn-primary" style="float:right"><i class="fa fa-reply"></i> Gönder</button>
                        <br />
                    </form>

                </div>
                <div class="clearfix"></div>



            </div>
        </div>
    </div>
</div>



@section scripts
    {
    <scripts>

    </scripts>
}

