@model List<Message2>

@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="row">
        <partial name="LeftBar" />
        <div class="col-lg-9 animated fadeInRight">
            <div class="mail-box-header">
                <h2>
                    Gelen Kutusu
                </h2>
                <div class="mail-tools tooltip-demo m-t-md">
                    <button class="btn btn-white btn-sm" onClick="window.location.reload();" data-toggle="tooltip" data-placement="left" title="Yenile"><i class="fa fa-refresh"></i></button>
                </div>
            </div>
            <div class="mail-box">

                <table class="table table-hover table-mail">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="read">
                                <td class="mail-ontact"><a href="#">@item.SenderUser.WriterName</a></td>
                                <td class="mail-subject"><a href="#">@item.Subject</a></td>
                                <td class="text-right mail-date">@item.MessageDate.ToLongDateString()</td>
                                <td class=""><a href="/Admin/Message/Details/@item.MessageID" class="btn btn-sm btn-outline-info">Detay</a></td>
                                <td class=""><a href="/Admin/Message/Delete/@item.MessageID" class="btn btn-sm btn-outline-danger">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>


            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <scripts>

    </scripts>
}

