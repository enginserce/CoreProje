@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5>İletişim Listesi</h5>
            </div>
            <div class="ibox-content">

                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Mail</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Detay</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending(x=> x.ContactID))
                        {
                            <tr>
                                <th><span class="label label-default">@item.ContactID</span></th>
                                <td>@item.ContactUserName</td>
                                <td>@item.ContactMail</td>
                                <td>@item.ContactSubject</td>
                                <td>@item.ContactDate.ToLongDateString()</td>
                                <td><a href="/Admin/Contact/Details/@item.ContactID" class="btn btn-outline-dark">Detay</a></td>
                                <td><a href="/Admin/Contact/Delete/@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <scripts>

    </scripts>
}

