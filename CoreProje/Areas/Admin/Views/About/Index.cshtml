@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5>Hakkımızda</h5>
            </div>
            <div class="ibox-content">

                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Resim</th>
                            <th>Detay</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th><span class="label label-default">@item.AboutID</span></th>
                                <td>@item.AboutImage1</td>
                                @if (item.AboutDetails1.Length < 25)
                                {
                                    <td>@item.AboutDetails1</td>
                                }
                                else
                                {
                                    <td>@item.AboutDetails1.Substring(0,25)</td>
                                }
                                <td><a href="/Admin/About/Edit/@item.AboutID" class="btn btn-outline-warning">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <scripts>

    </scripts>
}


